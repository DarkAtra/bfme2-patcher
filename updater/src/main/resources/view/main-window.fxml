<?xml version="1.0" encoding="UTF-8"?>

<?import de.darkatra.patcher.updater.gui.element.FadingBackground?>
<?import de.darkatra.patcher.updater.gui.element.UpdateProgressBar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<StackPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.darkatra.patcher.updater.gui.controller.MainWindowController">
	<FadingBackground maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"/>
	<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
		<bottom>
			<BorderPane BorderPane.alignment="CENTER">
				<center>
					<UpdateProgressBar fx:id="updateProgressBar"/>
				</center>
				<padding>
					<Insets bottom="10.0" left="10.0" right="10.0"/>
				</padding>
				<bottom>
					<GridPane hgap="5.0" BorderPane.alignment="CENTER">
						<columnConstraints>
							<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
							<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
						</columnConstraints>
						<rowConstraints>
							<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
						</rowConstraints>
						<BorderPane.margin>
							<Insets top="5.0"/>
						</BorderPane.margin>
						<Button fx:id="updateButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Check for Updates"/>
						<Button fx:id="startGameButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Start Game" GridPane.columnIndex="1"/>
					</GridPane>
				</bottom>
			</BorderPane>
		</bottom>
		<top>
			<MenuBar BorderPane.alignment="CENTER">
				<Menu mnemonicParsing="false" text="Startup Fix">
					<MenuItem fx:id="fixBfME2MenuItem" mnemonicParsing="false" text="Fix BfME 2"/>
					<MenuItem fx:id="fixBfME2EP1MenuItem" mnemonicParsing="false" text="Fix BfME 2 RotWK"/>
				</Menu>
				<Menu mnemonicParsing="false" text="Game Settings">
					<CheckMenuItem fx:id="toggleHdEdition" mnemonicParsing="false" text="Enable HD Edition"/>
					<!--<MenuItem fx:id="changeResolution" mnemonicParsing="false" text="Game Resolution"/>-->
				</Menu>
				<Menu mnemonicParsing="false" text="Patcher Settings">
					<CheckMenuItem fx:id="patchOnStartup" mnemonicParsing="false" text="Auto patch on startup"/>
					<CheckMenuItem fx:id="launchAfterPatch" mnemonicParsing="false" text="Auto launch after patching"/>
				</Menu>
				<Menu mnemonicParsing="false" text="Version">
					<MenuItem fx:id="versionMenuItem" mnemonicParsing="false" text="Unknown"/>
					<MenuItem fx:id="checkUpdates" mnemonicParsing="false" text="Check Updates"/>
				</Menu>
				<Menu mnemonicParsing="false" text="Credits">
					<MenuItem fx:id="bfmeReforgedCredits" mnemonicParsing="false" text="BFME: Reforged for providing the icon for this application."/>
				</Menu>
			</MenuBar>
		</top>
		<right>
			<Button fx:id="quickUpdate" mnemonicParsing="false" text="Update available" visible="false" BorderPane.alignment="TOP_RIGHT">
				<BorderPane.margin>
					<Insets right="10.0" top="10.0"/>
				</BorderPane.margin>
			</Button>
		</right>
	</BorderPane>
</StackPane>
