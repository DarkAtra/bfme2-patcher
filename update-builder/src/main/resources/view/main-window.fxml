<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.darkatra.patcher.updatebuilder.gui.controller.MainWindowController">
    <center>
        <ListView fx:id="listView" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </ListView>
    </center>
    <right>
        <BorderPane BorderPane.alignment="CENTER">
            <bottom>
                <Button fx:id="createPatchButton" alignment="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Create Patch" BorderPane.alignment="CENTER"/>
            </bottom>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <top>
                <GridPane vgap="10.0" BorderPane.alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Button fx:id="addFilesButton" alignment="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Add Files"/>
                    <Button fx:id="addDirectoryButton" alignment="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Add Directory" GridPane.rowIndex="1"/>
                    <Button fx:id="removeFilesButton" alignment="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Remove Files" GridPane.rowIndex="2"/>
                </GridPane>
            </top>
        </BorderPane>
    </right>
</BorderPane>
